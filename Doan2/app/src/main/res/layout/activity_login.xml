<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="#172C5B"
    >

    <TextView
        android:textColor="#ffffff"
        android:text="Smart Home"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/logo"
        />

    <EditText
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/imguser"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:id="@+id/edtTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="username"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginHorizontal="10dp"
        />

    <EditText
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/imgpassword"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/edtMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="password"
        android:textSize="20dp"
        android:padding="10dp"/>

    <Button
        android:background="@drawable/custom_button"
        android:layout_marginTop="30dp"
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/txtThongBao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin tài khoản sai"
        android:textColor="#E68A0C"
        android:gravity="center"
        android:textSize="20dp"
        android:visibility="invisible"
        android:layout_marginTop="10dp"

        />
</LinearLayout>